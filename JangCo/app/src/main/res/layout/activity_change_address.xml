<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ChangeAddressActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/changeAddressActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        android:elevation="2dp"
        android:theme="?attr/actionBarTheme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/signUpLabelTextVIew"
            android:layout_marginTop="24dp"
            android:text="@string/address" />

        <Button
            android:id="@+id/changeAddressActivitySearchForAddressButton"
            style="@style/signUpAddressSearchButton"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/changeAddressActivityAddressLayout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <EditText
                android:id="@+id/changeAddressActivityAddressCityProvince"
                style="@style/signUpSmallEditText"
                android:focusable="false"
                android:gravity="center" />

            <EditText
                android:id="@+id/changeAddressActivityAddressDistrict"
                style="@style/signUpSmallEditText"
                android:layout_marginLeft="16dp"
                android:focusable="false"
                android:gravity="center" />
        </LinearLayout>

        <EditText
            android:id="@+id/changeAddressActivityAddressDetails"
            style="@style/signUPBigEditText"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/changeAddressActivityCancelButton"
            style="@style/moreInfoFragmentSmallButton"
            android:background="@drawable/rectangle_lightgray_color"
            android:text="@string/cancelLabel" />
        <Button
            android:id="@+id/changeAddressActivityUpdateButton"
            style="@style/moreInfoFragmentSmallButton"
            android:background="@drawable/rectangle_basic_color"
            android:text="@string/updateLabel"/>
    </LinearLayout>


</LinearLayout>